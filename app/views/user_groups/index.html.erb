<div class="container mt-4">
  <div class="row">
    <div class="col-12">
      <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="h3 mb-0">
          <i class="bi bi-people-fill text-primary me-2"></i>
          <%= t('user_groups.index.title') %>
        </h1>
        <%= link_to new_user_group_path, class: "btn btn-primary" do %>
          <i class="bi bi-plus-circle me-1"></i>
          <%= t('user_groups.buttons.new_group') %>
        <% end %>
      </div>

      <% if @user_groups.any? %>
        <div class="row">
          <% @user_groups.each do |group| %>
            <div class="col-md-6 col-lg-4 mb-4">
              <div class="card h-100 shadow-sm">
                <div class="card-body d-flex flex-column">
                  <h5 class="card-title">
                    <i class="bi bi-people text-primary me-2"></i>
                    <%= group.name %>
                  </h5>
                  <% if group.description.present? %>
                    <p class="card-text text-muted flex-grow-1">
                      <%= group.description %>
                    </p>
                  <% end %>
                  <div class="mt-auto">
                    <div class="d-flex justify-content-between align-items-center mb-3">
                      <small class="text-muted">
                        <i class="bi bi-person-check me-1"></i>
                        <%= t('user_groups.member_count', count: group.users.count) %>
                      </small>
                      <small class="text-muted">
                        <i class="bi bi-question-square me-1"></i>
                        <%= t('quiz.count', count: group.quizzes.count) %>
                      </small>
                    </div>
                    <div class="d-grid gap-2">
                      <%= link_to user_group_path(group), class: "btn btn-outline-primary btn-sm" do %>
                        <i class="bi bi-eye me-1"></i>
                        <%= t('buttons.view') %>
                      <% end %>
                      <%= link_to edit_user_group_path(group), class: "btn btn-outline-secondary btn-sm" do %>
                        <i class="bi bi-pencil me-1"></i>
                        <%= t('user_groups.buttons.edit_group') %>
                      <% end %>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          <% end %>
        </div>
      <% else %>
        <div class="text-center py-5">
          <div class="mb-4">
            <i class="bi bi-people text-muted" style="font-size: 4rem;"></i>
          </div>
          <h4 class="text-muted mb-3"><%= t('user_groups.index.no_groups') %></h4>
          <p class="text-muted mb-4"><%= t('user_groups.index.create_first') %></p>
          <%= link_to new_user_group_path, class: "btn btn-primary btn-lg" do %>
            <i class="bi bi-plus-circle me-2"></i>
            <%= t('user_groups.buttons.new_group') %>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
</div>
