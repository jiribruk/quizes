<div class="answer-item border rounded p-2 mb-2" data-answer-index="<%= answer_form.index %>">
  <div class="row align-items-center">
    <div class="col-md-8">
      <%= answer_form.text_field :text, class: "form-control", 
          placeholder: "Zadejte text odpovědi" %>
    </div>
    <div class="col-md-3">
      <div class="form-check">
        <%= answer_form.check_box :correct, class: "form-check-input" %>
        <%= answer_form.label :correct, "Správná odpověď", class: "form-check-label" %>
      </div>
    </div>
    <div class="col-md-1">
      <button type="button" class="btn btn-outline-danger btn-sm remove-answer-btn">
        <i class="bi bi-x"></i>
      </button>
    </div>
  </div>
  <%= answer_form.hidden_field :_destroy %>
</div> 