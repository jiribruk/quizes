<%= form_for(quiz, html: { class: "w-100 mx-auto", style: "max-width: 800px;", multipart: true }) do |form| %>
  <!-- Quiz basic info -->
  <div class="card mb-4">
    <div class="card-header">
      <h5 class="card-title mb-0"><%= t("titles.quiz_form") %></h5>
    </div>
    <div class="card-body">
      <div class="row">
        <div class="col-md-6 mb-3">
          <%= form.label :name, t("labels.quiz_name"), class: "form-label fw-bold required" %>
          <%= form.text_field :name, class: "form-control", placeholder: t("placeholders.quiz_name"), required: true %>
        </div>
        <div class="col-md-6 mb-3">
          <%= form.label :category, t("labels.category"), class: "form-label fw-bold" %>
          <%= form.text_field :category, class: "form-control", placeholder: t("placeholders.category") %>
        </div>
      </div>

      <!-- Visibility section -->
      <div class="row">
        <div class="col-12 mb-4">
          <div class="card border-0 bg-light">
            <div class="card-body p-3">
              <div class="d-flex align-items-center justify-content-between">
                <div>
                  <label class="form-label fw-semibold mb-1 cursor-pointer" for="quiz_private_switch">
                    <i class="bi bi-lock text-warning me-2"></i><%= t("labels.visibility") %>
                  </label>
                  <small class="form-text text-muted d-block" id="visibility-description">
                    <span id="public-description" style="display: inline;">
                      <%= t("quiz.visibility.public_description") %>
                    </span>
                    <span id="private-description" style="display: none;"><%= t("quiz.visibility.private_description") %></span>
                  </small>
                </div>
                <div class="form-check form-switch">
                  <%= form.check_box :visibility, 
                      { 
                        class: "form-check-input", 
                        id: "quiz_private_switch", 
                        style: "transform: scale(1.3);"
                      }, 
                      "private", 
                      "public" %>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>

      <!-- User Groups section (only for private quizzes) -->
      <div class="row" id="user-groups-section" style="display: none;">
        <div class="col-12 mb-3">
          <%= form.label :user_group_ids, t("labels.user_groups"), class: "form-label fw-bold" %>
          <div class="form-text text-muted mb-2"><%= t("quiz.warnings.group_sensitive_data") %></div>
          <% if current_user.owned_user_groups.any? %>
            <div class="row">
              <% current_user.owned_user_groups.each do |group| %>
                <div class="col-md-6 mb-2">
                  <div class="form-check">
                    <%= form.check_box :user_group_ids, { multiple: true, class: "form-check-input" }, group.id, nil %>
                    <%= form.label "user_group_ids_#{group.id}", group.name, class: "form-check-label" %>
                    <small class="form-text text-muted d-block"><%= group.description %></small>
                  </div>
                </div>
              <% end %>
            </div>
          <% else %>
            <div class="alert alert-info">
              <i class="bi bi-info-circle"></i> <%= t("quiz.no_groups_message") %>
            </div>
          <% end %>
        </div>
      </div>

      <!-- Warning for public quizzes -->
      <div class="row" id="public-warning" style="display: block;">
        <div class="col-12">
          <div class="alert alert-warning">
            <i class="bi bi-exclamation-triangle"></i> <%= t("quiz.warnings.sensitive_data") %>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Questions section -->
  <div class="card mb-4">
    <div class="card-header d-flex justify-content-between align-items-center">
      <h5 class="card-title mb-0"><%= t("titles.questions_section") %></h5>
    </div>
    <div class="card-body">
      <div id="questions-container">
        <% quiz.questions.each_with_index do |question, index| %>
          <%= render partial: 'question_form', locals: { question_index: @indexes&.question_index || index, answer_index: @indexes&.answer_index, question: question } %>
        <% end %>
      </div>
    </div>
  </div>

  <!-- Submit button -->
  <div class="d-grid gap-2 position-sticky bottom-0 bg-white p-3">
    <%= link_to add_question_quizzes_path(question_index: @indexes&.question_index || (quiz.questions.size - 1)),
                class: "btn btn-success btn-sm",
                id: "add_question_button",
                data: {
                  turbo_method: :post,
                  turbo_stream: true,
                } do %>
      <i class="bi bi-plus-circle"></i> <%= t("buttons.add_question") %>
    <% end %>
    <%= form.submit class: "btn btn-primary btn-lg" %>
  </div>
<% end %>

