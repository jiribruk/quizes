<div class="row justify-content-center">
  <div class="col-md-8">
    <div class="card">
      <div class="card-header">
        <h2 class="text-center mb-0"><%= t('.title', resource: devise_i18n_fix_model_name_case(resource.model_name.human, i18n_key: 'registrations.edit.title')) %></h2>
      </div>
      <div class="card-body">
        <div class="row mb-4">
          <div class="col-md-3 text-center">
            <%= image_tag current_user.gravatar_url(size: 100), class: "rounded-circle mb-2", alt: current_user.display_name %>
            <p class="text-muted small"><%= t('users.profile.gravatar_info') %></p>
          </div>
          <div class="col-md-9">
            <h4><%= current_user.display_name %></h4>
            <p class="text-muted"><%= current_user.email %></p>
          </div>
        </div>

        <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put, class: "needs-validation", novalidate: true }) do |f| %>
          <%= render "devise/shared/error_messages", resource: resource %>

          <div class="row">
            <div class="col-md-6 mb-3">
              <%= f.label :first_name, t('activerecord.attributes.user.first_name'), class: "form-label" %>
              <%= f.text_field :first_name, class: "form-control", autofocus: true, minlength: 2, maxlength: 50 %>
              <div class="invalid-feedback">
                <%= t('activerecord.errors.models.user.attributes.first_name.invalid') %>
              </div>
            </div>
            <div class="col-md-6 mb-3">
              <%= f.label :last_name, t('activerecord.attributes.user.last_name'), class: "form-label" %>
              <%= f.text_field :last_name, class: "form-control", minlength: 2, maxlength: 50 %>
              <div class="invalid-feedback">
                <%= t('activerecord.errors.models.user.attributes.last_name.invalid') %>
              </div>
            </div>
          </div>

          <div class="mb-3">
            <%= f.label :email, class: "form-label required" %>
            <%= f.email_field :email, class: "form-control", autocomplete: "email", required: true %>
          </div>

          <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
            <div class="alert alert-info">
              <%= t('.currently_waiting_confirmation_for_email', email: resource.unconfirmed_email) %>
            </div>
          <% end %>

          <hr class="my-4">
          <h5><%= t('users.profile.change_password') %></h5>

          <div class="mb-3">
            <%= f.label :password, class: "form-label" %>
            <small class="form-text text-muted">(<%= t('.leave_blank_if_you_don_t_want_to_change_it') %>)</small>
            <%= f.password_field :password, class: "form-control", autocomplete: "new-password" %>
            <% if @minimum_password_length %>
              <small class="form-text text-muted"><%= t('devise.shared.minimum_password_length', count: @minimum_password_length) %></small>
            <% end %>
          </div>

          <div class="mb-3">
            <%= f.label :password_confirmation, class: "form-label" %>
            <%= f.password_field :password_confirmation, class: "form-control", autocomplete: "new-password" %>
          </div>

          <div class="mb-3">
            <%= f.label :current_password, class: "form-label required" %>
            <small class="form-text text-muted">(<%= t('.we_need_your_current_password_to_confirm_your_changes') %>)</small>
            <%= f.password_field :current_password, class: "form-control", autocomplete: "current-password", required: true %>
          </div>

          <div class="d-grid">
            <%= f.submit t('.update'), class: "btn btn-primary btn-lg" %>
          </div>
        <% end %>

        <hr class="my-4">
        <div class="text-center">
          <h5 class="text-danger"><%= t('.cancel_my_account') %></h5>
          <p class="text-muted"><%= t('.unhappy') %></p>
          <%= button_to t('.cancel_my_account'), registration_path(resource_name), 
                        class: "btn btn-outline-danger", 
                        data: { confirm: t('.are_you_sure'), turbo_confirm: t('.are_you_sure') }, 
                        method: :delete %>
        </div>

        <div class="text-center mt-3">
          <%= link_to t('devise.shared.links.back'), :back, class: "btn btn-secondary" %>
        </div>
      </div>
    </div>
  </div>
</div>
