# Database configuration
DATABASE=quizzes
POSTGRES_HOST=db
POSTGRES_USER=postgres
POSTGRES_PASSWORD=password
POSTGRES_PORT=5432

# Redis configuration
REDIS_URL=redis://redis:6379/0

# Application ports (for Raspberry Pi shared environment)
WEB_PORT=3001
NGINX_HTTP_PORT=8080
NGINX_HTTPS_PORT=8443
POSTGRES_EXTERNAL_PORT=5433
REDIS_EXTERNAL_PORT=6380

# Domain configuration
DOMAIN=smartiestapps.quizzes.com
BASE_DOMAIN=smartiestapps.com

# Rails configuration
# For development use: development
# For production use: production
RAILS_ENV=development
SECRET_KEY_BASE=your_secret_key_base_here

# Application configuration
RAILS_SERVE_STATIC_FILES=true
RAILS_LOG_TO_STDOUT=true

# ===========================================
# PRODUCTION CONFIGURATION NOTES:
# ===========================================
# For production deployment, change these values:
# RAILS_ENV=production
# POSTGRES_PASSWORD=your_secure_production_password
# SECRET_KEY_BASE=your_secure_production_secret_key_base
# 
# Generate SECRET_KEY_BASE with:
# docker-compose exec web bundle exec rails secret
#
# For production, also consider:
# - Setting up SSL certificates
# - Using environment-specific database names
# - Configuring proper logging levels
# - Setting up monitoring and alerting
